<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#141f29"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:drawableRight="@drawable/ic_calculate_24"
        android:paddingLeft="75dp"
        android:paddingRight="95dp"
        android:gravity="center"
        android:text="Calculator"
        android:textColor="@color/white"
        android:background="@drawable/number_bg"
        android:backgroundTint="#fb7845"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="100dp"
        android:elevation="50dp"
        android:layout_marginBottom="40dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#212832"
            >
            <TextView
                android:id="@+id/display"
                android:layout_width="380dp"
                android:layout_height="170dp"
                android:gravity="right|center_vertical"
                android:textColor="#fffefe"
                android:padding="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        app:cardElevation="100dp"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#010001"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/clear"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="#E91E63"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/modulus"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="22dp"
                    android:src="@drawable/modulus"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/divide"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="22dp"
                    android:src="@drawable/divide"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    android:backgroundTint="#fb7845"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="25dp"
                    android:src="@drawable/delete"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/seven"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/seven"
                    android:textStyle="bold|italic"
                     />

                <ImageView
                    android:id="@+id/eight"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/eight"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/nine"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/nine"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/multiply"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="25dp"
                    android:src="@drawable/multiple"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/four"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/four"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/five"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/five"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/six"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/six"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/subtract"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="22dp"
                    android:src="@drawable/sub"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/one"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/two"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/two"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/three"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="28dp"
                    android:src="@drawable/three"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/addition"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="22dp"
                    android:src="@drawable/add"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/zero"
                    android:layout_width="160dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="27dp"
                    android:src="@drawable/zero"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/dot"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="30dp"
                    android:src="@drawable/dot"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/equal"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/number_bg"
                    android:backgroundTint="#fb7845"
                    app:tint="@color/numberColor"
                    android:gravity="center"
                    android:padding="22dp"
                    android:src="@drawable/equal"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>